{
	"name": "tpwd/typo3-kiscore",
	"type": "typo3-cms-extension",
	"description": "TYPO3 extension to integrate kiscore.ai, AI bot detection and analysis.",
	"license": "GPL-2.0+",
	"support": {
		"issues": "https://github.com/tpwd/typo3-kiscore/issues"
	},
	"require": {
		"typo3/cms-core": "^12 || ^13",
		"ext-pdo": "*"
	},
	"autoload": {
		"psr-4": {
			"Tpwd\\Kiscore\\": "Classes"
		},
		"classmap": [
			"Classes"
		]
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "kiscore",
			"web-dir": ".Build/web"
		}
	},
	"config": {
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"bin-dir": ".Build/bin",
		"vendor-dir": ".Build/vendor"
	},
	"require-dev": {
		"typo3/coding-standards": "*",
		"friendsofphp/php-cs-fixer": "*",
		"phpstan/phpstan": "*",
		"phpunit/phpunit": "^10"
	},
	"scripts": {
		"test": [
			"@php .Build/bin/phpunit --colors=always"
		]
	}
}
